<section class="items-section">
    <div class="items-container">
        <div class="items-row">
        <% if @items.present? %>
            <% @items.each do |item| %>
            <div class="item-column">
                <div class="item-card">
                <%= link_to item_path(item) do %>
                    <%= image_tag item.image, class: "item-image" %>
                <% end %>
                <div class="item-details">
                    <h5 class="item-name"><%= item.item_name %></h5>
                    <span class="item-price"><%= number_to_currency(item.price, unit: "Â¥", precision: 0) %></span>
                </div>
                <div class="item-actions">
                    <a class="action-btn" href="#">Add to cart</a>
                    <%= link_to "Test Ride", new_test_drive_reservation_path(item_id: item.id), class: "action-btn" %>
                </div>
                </div>
            </div>
            <% end %>
        <% end %>
        </div>
    </div>
</section>
